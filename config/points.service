# /lib/systemd/system/points.service
[Unit]
Description=WiFiPiTrain motor control
After=syslog.target
Before=nginx.service


[Service]
Type=simple
#PIDFile=/var/run/trains.pid
ExecStart=/usr/bin/python3 /usr/share/trains/points_server.py
StandardOutput=journal
StandardError=journal
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
RequiredBy=nginx.service
